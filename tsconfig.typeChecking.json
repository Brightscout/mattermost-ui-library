{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "react",
		"noUnusedParameters": true,
		"importHelpers": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"outDir": "build",
		"declaration": true,
		"sourceMap": true,
		"emitDeclarationOnly": false,
		"removeComments": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/setupTests.ts", "src/reportWebVitals.ts"]
}
